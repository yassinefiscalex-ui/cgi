
<div class="hierarchy-page">
    <div class="container">
        <div class="page-header">
            <h1>Structure du Code Général des Impôts</h1>
            <p>Navigation hiérarchique par Livres, Titres, Chapitres et Sections</p>
        </div>

        <div class="hierarchy-content">
            <!-- Livres -->
            <section id="livres" class="hierarchy-section">
                <h2>Livres</h2>
                <% if (structure.livres && Object.keys(structure.livres).length > 0) { %>
                    <div class="hierarchy-grid">
                        <% Object.values(structure.livres).forEach(livre => { %>
                            <div class="hierarchy-card">
                                <div class="card-header">
                                    <h3>Livre <%= livre.numero %></h3>
                                    <span class="article-count"><%= livre.articles.length %> article<%= livre.articles.length > 1 ? 's' : '' %></span>
                                </div>
                                <div class="card-content">
                                    <h4><%= livre.titre %></h4>
                                    <div class="card-actions">
                                        <button class="btn btn-sm btn-primary" onclick="toggleSection('livre-<%= livre.numero %>')">
                                            Voir les articles
                                        </button>
                                    </div>
                                </div>
                                <div class="card-articles" id="livre-<%= livre.numero %>" style="display: none;">
                                    <div class="articles-list">
                                        <% livre.articles.slice(0, 10).forEach(article => { %>
                                            <div class="article-item">
                                                <a href="/articles/<%= article.id %>" class="article-link">
                                                    <span class="article-number"><%= article.numero_article %></span>
                                                    <span class="article-title"><%= article.titre %></span>
                                                </a>
                                            </div>
                                        <% }); %>
                                        <% if (livre.articles.length > 10) { %>
                                            <div class="more-articles">
                                                <a href="/articles?query=livre <%= livre.numero %>" class="btn btn-sm btn-outline">
                                                    Voir tous les articles (<%= livre.articles.length - 10 %> de plus)
                                                </a>
                                            </div>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <div class="no-data">
                        <p>Aucun livre trouvé dans la structure</p>
                    </div>
                <% } %>
            </section>

