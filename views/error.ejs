
<div class="error-page">
    <div class="container">
        <div class="error-content">
            <div class="error-icon">
                <svg width="120" height="120" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"></circle>
                    <line x1="15" y1="9" x2="9" y2="15"></line>
                    <line x1="9" y1="9" x2="15" y2="15"></line>
                </svg>
            </div>
            
            <h1><%= title %></h1>
            <p class="error-message"><%= message %></p>
            
            <div class="error-actions">
                <a href="/" class="btn btn-primary">Retour à l'accueil</a>
                <a href="/articles" class="btn btn-secondary">Voir les articles</a>
                <button onclick="history.back()" class="btn btn-outline">Page précédente</button>
            </div>
            
            <% if (typeof error !== 'undefined' && error.stack && process.env.NODE_ENV === 'development') { %>
                <details class="error-details">
                    <summary>Détails techniques (développement)</summary>
                    <pre><%= error.stack %></pre>
                </details>
            <% } %>
        </div>
    </div>
</div>