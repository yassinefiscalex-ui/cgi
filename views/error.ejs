<!-- Error Page -->
<div class="error-page">
    <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="error-content">
            <div class="error-icon">
                <svg class="w-24 h-24 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                </svg>
            </div>
            
            <h1><%= title %></h1>
            <p class="error-message"><%= message %></p>
            
            <div class="error-actions">
                <a href="/" class="btn btn-primary">Retour à l'accueil</a>
                <a href="/articles" class="btn btn-secondary">Voir les articles</a>
                <button onclick="history.back()" class="btn btn-outline">Page précédente</button>
            </div>
            
            <% if (typeof error !== 'undefined' && error.stack && process.env.NODE_ENV === 'development') { %>
                <details class="mt-8 p-4 bg-gray-100 rounded-lg">
                    <summary class="cursor-pointer font-medium text-gray-700 mb-2">Détails techniques (développement)</summary>
                    <pre class="text-xs text-red-600 overflow-x-auto"><%= error.stack %></pre>
                </details>
            <% } %>
        </div>
    </div>
</div>