<!-- Breadcrumb -->
<nav class="breadcrumb">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <a href="/" class="text-blue-600 hover:text-blue-700">Accueil</a>
        <span class="separator">></span>
        <a href="/articles" class="text-blue-600 hover:text-blue-700">Articles</a>
        <span class="separator">></span>
        <span class="current"><%= article.numero_article %></span>
    </div>
</nav>

<!-- Article Detail -->
<div class="article-detail">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Article Header -->
        <header class="article-header">
            <div class="article-meta">
                <span class="article-number"><%= article.numero_article %></span>
                <span class="article-year"><%= article.annee %></span>
            </div>
            <h1 class="article-title"><%= article.titre %></h1>
            <div class="article-actions">
                <a href="/articles/<%= article.id %>/pdf" class="btn btn-primary">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                    Télécharger PDF
                </a>
                <button onclick="window.print()" class="btn btn-secondary">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"></path>
                    </svg>
                    Imprimer
                </button>
            </div>
        </header>

        <!-- Article Content -->
        <div class="article-content">
            <div class="content-main">
                <div class="article-text">
                    <pre class="article-body"><%= article.content %></pre>
                </div>

                <!-- Références -->
                <% if (article.references && article.references.length > 0) { %>
                    <section class="references-section">
                        <h2>Références</h2>
                        <div class="references-list">
                            <% article.references.forEach((ref, index) => { %>
                                <div class="reference-item">
                                    <div class="reference-number"><%= index + 1 %></div>
                                    <div class="reference-content">
                                        <p><%= ref.texte %></p>
                                        <% if (ref.annee_ref) { %>
                                            <span class="reference-year">Année: <%= ref.annee_ref %></span>
                                        <% } %>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    </section>
                <% } %>
            </div>

            <!-- Sidebar -->
            <aside class="article-sidebar">
                <!-- Navigation -->
                <div class="sidebar-section">
                    <h3>Navigation</h3>
                    <nav class="article-nav">
                        <a href="/articles" class="nav-link">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                            </svg>
                            Retour à la liste
                        </a>
                        <a href="/search" class="nav-link">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                            </svg>
                            Nouvelle recherche
                        </a>
                    </nav>
                </div>

                <!-- Statistiques -->
                <div class="sidebar-section">
                    <h3>Informations</h3>
                    <div class="article-stats">
                        <div class="stat-item">
                            <span class="stat-label">Année:</span>
                            <span class="stat-value"><%= article.annee %></span>
                        </div>
                        <% if (article.references && article.references.length > 0) { %>
                            <div class="stat-item">
                                <span class="stat-label">Références:</span>
                                <span class="stat-value"><%= article.references.length %></span>
                            </div>
                        <% } %>
                        <div class="stat-item">
                            <span class="stat-label">ID:</span>
                            <span class="stat-value"><%= article.id %></span>
                        </div>
                    </div>
                </div>
            </aside>
        </div>
    </div>
</div>

<!-- Print Styles -->
<style>
@media print {
    .sticky,
    .article-actions,
    .article-sidebar,
    .breadcrumb {
        display: none !important;
    }
    
    .article-detail {
        margin: 0 !important;
        padding: 0 !important;
    }
    
    .article-content {
        display: block !important;
    }
    
    .content-main {
        width: 100% !important;
    }
    
    .article-body {
        font-size: 12pt !important;
        line-height: 1.4 !important;
    }
}
</style>