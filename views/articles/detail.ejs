
<div class="article-detail">
    <div class="container">
        <!-- Breadcrumb -->
        <nav class="breadcrumb">
            <a href="/">Accueil</a>
            <span class="separator">></span>
            <a href="/articles">Articles</a>
            <span class="separator">></span>
            <span class="current"><%= article.numero_article %></span>
        </nav>

        <!-- Article Header -->
        <header class="article-header">
            <div class="article-meta">
                <span class="article-number"><%= article.numero_article %></span>
                <span class="article-year"><%= article.annee %></span>
            </div>
            <h1 class="article-title"><%= article.titre %></h1>
            <div class="article-actions">
                <a href="/articles/<%= article.id %>/pdf" class="btn btn-primary">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                        <polyline points="14,2 14,8 20,8"></polyline>
                    </svg>
                    Télécharger PDF
                </a>
                <button onclick="window.print()" class="btn btn-secondary">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="6,9 6,2 18,2 18,9"></polyline>
                        <path d="M6 18H4a2 2 0 0 1-2-2v-5a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-2"></path>
                        <rect x="6" y="14" width="12" height="8"></rect>
                    </svg>
                    Imprimer
                </button>
            </div>
        </header>

        <!-- Article Content -->
        <div class="article-content">
            <div class="content-main">
                <div class="article-text">
                    <pre class="article-body"><%= article.content %></pre>
                </div>

                <!-- Références -->
                <% if (article.references && article.references.length > 0) { %>
                    <section class="references-section">
                        <h2>Références</h2>
                        <div class="references-list">
                            <% article.references.forEach((ref, index) => { %>
                                <div class="reference-item">
                                    <div class="reference-number"><%= index + 1 %></div>
                                    <div class="reference-content">
                                        <p><%= ref.texte %></p>
                                        <% if (ref.annee_ref) { %>
                                            <span class="reference-year">Année: <%= ref.annee_ref %></span>
                                        <% } %>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    </section>
                <% } %>
            </div>

            <!-- Sidebar -->
            <aside class="article-sidebar">
                <!-- Navigation -->
                <div class="sidebar-section">
                    <h3>Navigation</h3>
                    <nav class="article-nav">
                        <a href="/articles" class="nav-link">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                                <polyline points="9,22 9,12 15,12 15,22"></polyline>
                            </svg>
                            Retour à la liste
                        </a>
                        <a href="/search" class="nav-link">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="11" cy="11" r="8"></circle>
                                <path d="m21 21-4.35-4.35"></path>
                            </svg>
                            Nouvelle recherche
                        </a>
                    </nav>
                </div>

                <!-- Articles similaires -->
                <% if (relatedArticles.length > 0) { %>
                    <div class="sidebar-section">
                        <h3>Articles Similaires</h3>
                        <div class="related-articles">
                            <% relatedArticles.forEach(related => { %>
                                <div class="related-item">
                                    <h4><a href="/articles/<%= related.id %>"><%= related.numero_article %></a></h4>
                                    <p><%= related.titre %></p>
                                    <span class="related-year"><%= related.annee %></span>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                <% } %>

                <!-- Statistiques -->
                <div class="sidebar-section">
                    <h3>Informations</h3>
                    <div class="article-stats">
                        <div class="stat-item">
                            <span class="stat-label">Année:</span>
                            <span class="stat-value"><%= article.annee %></span>
                        </div>
                        <% if (article.references && article.references.length > 0) { %>
                            <div class="stat-item">
                                <span class="stat-label">Références:</span>
                                <span class="stat-value"><%= article.references.length %></span>
                            </div>
                        <% } %>
                        <div class="stat-item">
                            <span class="stat-label">ID:</span>
                            <span class="stat-value"><%= article.id %></span>
                        </div>
                    </div>
                </div>
            </aside>
        </div>
    </div>
</div>

<!-- Print Styles -->
<style>
@media print {
    .main-header,
    .main-footer,
    .article-actions,
    .article-sidebar,
    .breadcrumb {
        display: none !important;
    }
    
    .article-detail {
        margin: 0 !important;
        padding: 0 !important;
    }
    
    .article-content {
        display: block !important;
    }
    
    .content-main {
        width: 100% !important;
    }
    
    .article-body {
        font-size: 12pt !important;
        line-height: 1.4 !important;
    }
}
</style>